@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Ana sayfa</a></li>
        <li><a href="#">Admin Panel Giriş</a></li>
    </ul>
    <div class="row">
        <div id="content" class="col-sm-12">
            <div class="page-login">
                <div class="account-border">
                    <div class="row">
                        <div class="col-sm-6 new-customer">
                            <div class="well">
                                <h2><i class="fa fa-file-o" aria-hidden="true"></i> Panel </h2>
                                <p><strong>Admin panel ulaşmak için bilgileri giriniz.</strong></p>
                            </div>
                        </div>
                        <form method="post" action="/login">
                            <div class="col-sm-6 customer-login">
                                <div class="well">
                                    <div class="form-group">
                                        <label class="control-label " for="input-email">Kullanıcı Adı</label>
                                        <input type="text" name="username" value="" id="input-email" class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label " for="input-password">Şifre</label>
                                        <input type="password" name="password" value="" id="input-password" class="form-control" />
                                    </div>
                                </div>
                                <div class="bottom-form">
                                    <input type="submit" value="Giriş" class="btn btn-default pull-right" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>