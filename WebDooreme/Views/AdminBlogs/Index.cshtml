@model IEnumerable<WebDooreme.Models.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="main-content">
    <div class="row page-header no-background no-shadow margin-b-0">
        <div class="col-lg-6 align-self-center ">
            <h2></h2>
            <ol class="breadcrumb">
            </ol>
        </div>
        <div class="col-lg-6 align-self-center text-right">
            <a class="btn btn-success box-shadow btn-icon btn-rounded" asp-action="Create"><i class="fa fa-plus"></i>Yeni Yazı Ekle</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table id="datatable" class="table table-striped dt-responsive">
                        <thead>
                            <tr>
                                <th>
                                    Resim
                                </th>
                                <th>
                                    Başlık
                                </th>
                                <th>
                                    Açıklama
                                </th>
                                <th>
                                    Kayıt Tarihi
                                </th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.Images)*@
                                        <img src="/upload/@item.ImageUrl" class="img-responsive" width="75px" />
                                    </td>
                                    <td>
                                        @if (item.Title.Length > 20)
                                        {
                                            @item.Title.Substring(0, 20).ToString()
                                        }
                                        else
                                        {
                                            @item.Title
                                        }
                                    </td>
                                    <td>
                                        @if (item.Description.Length > 20)
                                        {
                                            @item.Description.Substring(0, 20).ToString()
                                        }
                                        else
                                        {
                                            @item.Description
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateDate)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-rounded box-shadow btn-xs" asp-action="Edit" asp-route-id="@item.Id">DÜZENLE</a>
                                        <a class="btn btn-danger btn-rounded box-shadow btn-xs" asp-action="Delete" asp-route-id="@item.Id">SİL</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>