@using WebDooreme.Models
@model ProductDetailsViewModel


<ul class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i></a></li>
    <li><a href="#">Ürün Detay</a></li>
    <li><a href="#">@Model.Product.StockCode</a></li>

</ul>

<div class="row">
    <!--Left Part Start -->
    <aside class="col-sm-4 col-md-3 content-aside" id="column-left">
        @await Component.InvokeAsync("ProductCategoriesMenu")
        @await Component.InvokeAsync("Campaign")
    </aside>
    <!--Middle Part Start-->

    <div id="content" class="col-md-9 col-sm-8">
        <div class="product-view row">
            <div class="left-content-product">
                <div class="content-product-left class-honizol col-md-5 col-sm-12 col-xs-12">
                    <div class="large-image  ">
                        @{
                            var imageSrc = Model.Product.StockCode;
                            var strImage = imageSrc + ".jpg";
                        }


                        @if (Model.Product.SubCategoryId == 12 || Model.Product.SubCategoryId == 11 || Model.Product.SubCategoryId == 10 || Model.Product.SubCategoryId == 9 || Model.Product.SubCategoryId == 7 || Model.Product.SubCategoryId == 6
                        || Model.Product.SubCategoryId == 5 || Model.Product.SubCategoryId == 1 || Model.Product.SubCategoryId == 8)
                        {

                            <img itemprop="image" class="product-image-zoom" src="~/ProductImages/ProductL/@strImage" style="margin-left:25% ;background-color:aqua;" height="480">
                        }
                        else if (Model.Product.SubCategoryId == 16)
                        {
                            @*<img itemprop="image" class="product-image-zoom" src="~/ProductImages/ProductL/@strImage" width="600" height="480">*@
                            <img itemprop="image" class="product-image-zoom" src="~/ProductImages/ProductL/@strImage" height="355">
                        }
                        
                        @if (Model.Product.CategoryId == 8)
                        {
                            <img itemprop="image" class="product-image-zoom" src="~/ProductImages/ProductL/@strImage" height="410">
                        }
                        @if (Model.Product.CategoryId==10)
                        {
                              <img itemprop="image" class="product-image-zoom" src="~/ProductImages/ProductL/@strImage" height="395">

                        }
                      
                   
                      
                    </div>

                </div>

                <div class="content-product-right col-md-7 col-sm-12 col-xs-12">
                    <div class="title-product">
                        <h1 style="font-weight:600;color:#000">@Model.Product.StockCode.ToUpper()</h1>
                    </div>
                    <!-- Review ---->



                    <div class="product-label form-group">
                        <div class="product_page_price price" itemprop="offerDetails">
                            <span class="price-new" itemprop="price">@Model.Product.Keywords</span>
                        </div>
                        <!-- Review ---->
                        @if (Model.Product.Description == null)
                        {
                        }
                        else
                        {
                            <div class="producttab ">
                                <div class="tabsslider  vertical-tabs col-xs-12">
                                    <ul class="nav nav-tabs col-lg-4 col-sm-3">
                                        <li class="active"><a data-toggle="tab" href="#tab-1">Ürün Açıklaması</a></li>

                                    </ul>
                                    <div class="tab-content col-lg-12 col-sm-9 col-xs-12">
                                        <div id="tab-1" class="tab-pane fade active in">


                                            <p style="font-weight:600;color:black">
                                                @Model.Product.Description
                                            </p>


                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div id="product">
                        <input type="hidden" asp-for="StockCode" />
                        <form asp-action="Details" asp-controller="Product" method="post" class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <fieldset>
                                <legend style="font-weight:600;color:#000">Ürün Ön Bilgi ve Talep Formu </legend>
                                <div class="form-group required">
                                    <label class="col-sm-2" asp-for="ProductName" style="font-weight:600;color:#000">Ürün Adı</label>
                                    <div class="col-sm-5">
                                        <input type="text" asp-for="ProductName" value="@Model.Product.StockCode.ToUpper()" class="form-control" autocomplete="off" readonly="readonly">
                                    </div>
                                    <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2" asp-for="FullName" style="font-weight:600;color:#000">Ad soyad:<span style="color:red;">*</span></label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="FullName" class="form-control" autocomplete="off">
                                    </div>
                                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2" asp-for="Phone" style="font-weight:600;color:#000">Telefon:<span style="color:red;">*</span></label>
                                    <div class="col-sm-10">
                                        <input type="tel" asp-for="Phone" class="form-control" autocomplete="off" placeholder="">
                                    </div>
                                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2" asp-for="Email" style="font-weight:600;color:#000">E-mail:<span style="color:red;">*</span></label>
                                    <div class="col-sm-10">
                                        <input type="email" asp-for="Email" class="form-control" autocomplete="off">
                                    </div>
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group required">
                                    <label class="col-sm-2" asp-for="Address" style="font-weight:600;color:#000">Mesajınız:<span style="color:red;">*</span></label>
                                    <div class="col-sm-10">
                                        <textarea rows="10" asp-for="Address" class="form-control"></textarea>
                                    </div>
                                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                                </div>
                            </fieldset>
                            <div class="buttons">
                                <div class="pull-right">
                                    <button class="btn btn-default buttonGray" type="submit">
                                        <span>Gönder</span>
                                    </button>
                                </div>
                            </div>
                        </form>
                        @if (@ViewBag.IsSendMail != null)
                        {
                            <h5 style="color:red;"><b>@ViewBag.IsSendMail</b></h5>
                        }
                        else
                        {
                            <h5>&nbsp;</h5>
                        }
                    </div>
         
                </div>
                @*@await Component.InvokeAsync("RelatedProduct")*@
        @*        <h1 class="title-category" style=" margin-left:20px;color:red"><b></b></h1>
                @await Component.InvokeAsync("Discount")
*@
            </div>
        </div>

    </div>
</div>

