@using WebDooreme.Models
@model List<Reference>
@section metatags{
    <title>@ViewBag.title</title>
    <meta name="keywords" content="@ViewBag.keywords" />
    <meta name="description" content="@ViewBag.description" />
}
    <style>
        * {
            box-sizing: border-box;
        }
        .containerr {
            display: flex;
            width: auto;
            justify-content: center;
            flex-wrap: wrap;
        }
        .card {
            margin: 16px;
            background-color: #fff;
            border-radius: 38px;
            box-shadow: 0 8px 28px rgb(0 0 0 / 34%);
            overflow: hidden;
            width: 331px;
        }
        .card-header img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            padding: 27px;
            min-height: 232px;
        }
        .tag {
            background: #cccccc;
            border-radius: 50px;
            font-size: 12px;
            margin: 0;
            color: #fff;
            padding: 2px 10px;
            text-transform: uppercase;
            cursor: pointer;
        }
        .tag-teal {
            background-color: #47bcd4;
        }
        .tag-purple {
            background-color: #5e76bf;
        }
        .tag-pink {
            background-color: #cd5b9f;
        }
        .card-body p {
            font-size: 13px;
            margin: 0 0 40px;
        }
        .user {
            display: flex;
            margin-top: auto;
        }
            .user img {
                width: 319px;
                height: 100px;
                margin-right: 10px;
            }
        .user-info h5 {
            margin: 0;
        }
        .user-info small {
            color: #545d7a;
        }
        h4 {
            font-size: 15px;
            font-weight: bold;
        }
        .cardd {
            /* width: 300px; */
            /* width: 300px; */
            margin: 16px;
            background-color: #fff;
            border-radius: 38px;
            box-shadow: 0 8px 28px rgb(0 0 0 / 34%);
            overflow: hidden;
        }
        .carddx {
            /* width: 300px; */
            /* width: 300px; */
            margin: 16px;
            background-color: #fff;
            border-radius: 38px;
            box-shadow: 0 8px 28px rgb(0 0 0 / 34%);
            overflow: hidden;
            width: 300px;
            margin-left: 100px
        }
    </style>

            <div id="content">
                <div class="container">
                    <ul class="breadcrumb">
                        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Ana Sayfa</a></li>
                        <li><a href="#">Referanslar</a></li>
                    </ul>
                    <div class="">
                        <h1 style="color: #ed1c24; font-weight:bold; text-transform:uppercase ;margin-left:6%;">Referanslarımızdan Bazıları</h1>
                        <hr />
                    </div>
                    <div class="containerr">
                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div class="card-header">
                        <img src="@item.ReferenceImage" alt="@item.ReferenceName" target="_self" title="Özel ürünler" ref="Özel ürünler" />
                            </div>
                            <div class="card-body">
                                <h4>
                                    @item.ReferenceName
                                </h4>
                                <div class="user">
                            <img src="@item.ReferenceThumb1" alt="@item.ReferenceName" target="_self" title="Özel ürünler" ref="Özel ürünler" alt="user" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
        @await Component.InvokeAsync("ReferansTables")
            </div>
        </div>
  